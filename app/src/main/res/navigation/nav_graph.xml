<?xml version="1.0" encoding="utf-8"?>
 <navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mabem.homebook.Fragments.Main.MainFragment"
        android:label="@string/my_homes"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_notificationFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addNewHomeFragment"
            app:destination="@id/addNewHomeFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
    </fragment>

    <fragment
        android:id="@+id/feedFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.Receipt.FeedFragment"
        android:label="Home Feed"
        tools:layout="@layout/fragment_feed">
        <action
            android:id="@+id/action_feedFragment_to_editHouseFragment"
            app:destination="@id/editHomeFragment" />
        <action
            android:id="@+id/action_feedFragment_to_houseInfoFragment"
            app:destination="@id/homeInfoFragment" />
        <action
            android:id="@+id/action_feedFragment_to_addReceiptFragment"
            app:destination="@id/manageReceiptFragment" />
        <action
            android:id="@+id/action_feedFragment_to_addReminderFragment"
            app:destination="@id/remindersFragment" />
        <action
            android:id="@+id/action_feedFragment_to_placeholder10"
            app:destination="@id/statisticFragment" />
        <action
            android:id="@+id/action_feedFragment_to_receiptInfoFragment"
            app:destination="@id/receiptInfoFragment" />
        <action
            android:id="@+id/action_feedFragment_to_manageReceiptFragment"
            app:destination="@id/manageReceiptFragment" />
    </fragment>

    <fragment
        android:id="@+id/remindersFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.Reminder.RemindersFragment"
        android:label="Reminders"
        tools:layout="@layout/fragment_reminders">
        <action
            android:id="@+id/action_remindersFragment_to_addReminderFragment"
            app:destination="@id/reminderSetFragment" />
    </fragment>

    <fragment
        android:id="@+id/notificationsFragment"
        android:name="com.mabem.homebook.Fragments.Main.Notifications.NotificationsFragment"
        android:label="Notifications"
        tools:layout="@layout/fragment_notifications" />

    <fragment
        android:id="@+id/addNewHomeFragment"
        android:name="com.mabem.homebook.Fragments.Main.AddNewHomeFragment"
        android:label="Add New Home"
        tools:layout="@layout/fragment_create_home" >
        <action
            android:id="@+id/action_addNewHomeFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/editHomeFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.editHomeFragment"
        android:label="Edit Home"
        tools:layout="@layout/fragment_edit_home" />

    <fragment
        android:id="@+id/homeInfoFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.HomeInfoFragment"
        android:label="Home Info"
        tools:layout="@layout/fragment_home_info" >
        <action
            android:id="@+id/action_homeInfoFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/manageReceiptFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.Receipt.ReceiptManageFragment"
        android:label="Manage Receipt"
        tools:layout="@layout/fragment_manage_receipt" />

    <fragment
        android:id="@+id/editProfileFragment"
        android:name="com.mabem.homebook.Fragments.Main.EditProfileFragment"
        android:label="Edit Profile"
        tools:layout="@layout/fragment_edit_profile" >
        <action
            android:id="@+id/action_editProfileFragment_to_mainFragment"
            app:destination="@id/mainFragment" />
    </fragment>

    <fragment
        android:id="@+id/statisticFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.StatisticFragment"
        android:label="Statistic"
        tools:layout="@layout/fragment_statistic" />

    <fragment
        android:id="@+id/reminderSetFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.Reminder.ReminderSetFragment"
        android:label="Set New Reminder"
        tools:layout="@layout/fragment_remider_set" />

    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mabem.homebook.Fragments.SignIn.SplashFragment"
        android:label="Splash"
        tools:layout="@layout/fragment_splash">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mabem.homebook.Fragments.SignIn.LoginFragment"
        android:label="LogIn"
        tools:layout="@layout/login_fragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.mabem.homebook.Fragments.SignIn.SignUpFragment"
        android:label="SignUp"
        tools:layout="@layout/sign_up_fragment">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/signUpFragment"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.mabem.homebook.Fragments.Main.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />

    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.mabem.homebook.Fragments.Main.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings" >
        <action
            android:id="@+id/action_settingsFragment_to_editProfileFragment"
            app:destination="@id/editProfileFragment" />
        <action
            android:id="@+id/action_settingsFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
    </fragment>

    <fragment
        android:id="@+id/receiptInfoFragment"
        android:name="com.mabem.homebook.Fragments.Main.Home.Receipt.ReceiptInfoFragment"
        android:label="Receipt Info"
        tools:layout="@layout/fragment_receipt_info" />

</navigation>