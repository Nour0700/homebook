<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/splashFragment">
    <fragment
        android:id="@+id/mainFragment"
        android:name="com.mabem.homebook.Fragments.MainFragment"
        android:label="My Homes"
        tools:layout="@layout/main_fragment">
        <action
            android:id="@+id/action_mainFragment_to_loginFragment"
            app:popUpTo="@id/mainFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_mainFragment_to_notificationFragment"
            app:destination="@id/notificationsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_feedFragment"
            app:destination="@id/feedFragment" />
        <action
            android:id="@+id/action_mainFragment_to_addNewHausFragment"
            app:destination="@id/addNewHouseFragment" />
        <action
            android:id="@+id/action_mainFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_mainFragment_to_placeholder9"
            app:destination="@id/editProfileFragment" />
    </fragment>
    <fragment android:id="@+id/notificationsFragment" />
    <fragment android:id="@+id/feedFragment" >
        <action
            android:id="@+id/action_feedFragment_to_editHouseFragment"
            app:destination="@id/editHouseFragment" />
        <action
            android:id="@+id/action_feedFragment_to_houseInfoFragment"
            app:destination="@id/houseInfoFragment" />
        <action
            android:id="@+id/action_feedFragment_to_addReceiptFragment"
            app:destination="@id/manageReceiptFragment" />
        <action
            android:id="@+id/action_feedFragment_to_addReminderFragment"
            app:destination="@id/remindersFragment" />
        <action
            android:id="@+id/action_feedFragment_to_placeholder10"
            app:destination="@id/statisticFragment" />
    </fragment>
    <fragment android:id="@+id/addNewHouseFragment" />
    <fragment android:id="@+id/editHouseFragment" />
    <fragment android:id="@+id/houseInfoFragment" />
    <fragment android:id="@+id/manageReceiptFragment" />
    <fragment android:id="@+id/remindersFragment" >
        <action
            android:id="@+id/action_remindersFragment_to_addReminderFragment"
            app:destination="@id/manageReminder" />

    </fragment>
    <fragment android:id="@+id/settingsFragment" />
    <fragment android:id="@+id/editProfileFragment" />
    <fragment android:id="@+id/statisticFragment" />
    <fragment android:id="@+id/receiptMenuItem" />
    <fragment android:id="@+id/notificationMenuItem" />
    <fragment android:id="@+id/manageReminder" />
    <fragment android:id="@+id/reminderItemFragment" />
    <fragment android:id="@+id/receiptItemMenuItem" />
    <fragment android:id="@+id/houseMembersMenuItem" />
    <fragment android:id="@+id/adminHouseMembersMenuItem" />
    <fragment
        android:id="@+id/splashFragment"
        android:name="com.mabem.homebook.Fragments.SplashFragment"
        android:label="SplashFragment">
        <action
            android:id="@+id/action_splashFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_splashFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/splashFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/loginFragment"
        android:name="com.mabem.homebook.Fragments.LoginFragment"
        android:label="LoginFragment">
        <action
            android:id="@+id/action_loginFragment_to_signUpFragment"
            app:destination="@id/signUpFragment" />
        <action
            android:id="@+id/action_loginFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/signUpFragment"
        android:name="com.mabem.homebook.Fragments.SignUpFragment"
        android:label="SignUpFragment">
        <action
            android:id="@+id/action_signUpFragment_to_loginFragment"
            app:destination="@id/loginFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
        <action
            android:id="@+id/action_signUpFragment_to_mainFragment"
            app:destination="@id/mainFragment"
            app:popUpTo="@id/loginFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/aboutFragment"
        android:name="com.mabem.homebook.Fragments.AboutFragment"
        android:label="@string/about"
        tools:layout="@layout/fragment_about" />
</navigation>